@model OSSSM_1.Models.Login.AccountLoginInput
@{
    ViewData["Title"] = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html>
<!--phần đầu-->
<head>
    <title>Đăng nhập hệ thống</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/style_login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<!-- phần thân -->
<body>
    <div class="background">
        <div class="login-page">
            <div class="form">
                <form asp-controller="Login" method="post" class="login-form">
                    <h2><i class="fas fa-lock"></i> ĐĂNG NHẬP</h2>
                    <input name="UserName" type="text" placeholder="Tên người dùng" value="@Model.UserName" required />
                    <input name="Password" type="password" placeholder="Mật khẩu" value="@Model.Password" required />
                    <button type="submit" name="send2">Đăng nhập</button>
                    <div style="color:#f00">@Html.Raw(TempData["msg"])</div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

