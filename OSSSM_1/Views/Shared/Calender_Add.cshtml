@model CalenderDetail;
<!DOCTYPE html>
<html>
<!--phần đầu-->
<head>
    <title>Thêm lịch phẫu thuật</title>
    <meta charset="utf-8">
    <link href="st"
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/2f8895050a.js" crossorigin="anonymous"></script>
    <style>
        .list-group.item2 {
            background-color: #001F54;
            color: #FEFCFB !important;
        }
    </style>
</head>
<body>
    <div class="surgery-content">
         <div class="surgery-navigator">
                <div class="surgery-major-button">
                    <!-- nghiệp vụ -->
                    <div class="dropdown">
                        <button class="dropbtn">
                            NGHIỆP VỤ
                            <div class="dropbtn-icon"><i class="fa-solid fa-user-tie"></i></div>
                        </button>
                        <div class="dropdown-content">
                            <a href="lichphauthuat-them.html">Thêm ca phẫu thuật</a>
                        </div>
                    </div>
                </div>
                <div class="surgery-major-title">
                    <i class="fa-solid fa-chevron-right"></i>
                    THÊM CA PHẪU THUẬT
                </div>
            </div> <br>
            <form asp-action="Calender_Add" method="post">
                <div class="surgery-filling-form">
                    <div class="surgery-form patientname">
                        <label for="patient-name">Họ và tên bệnh nhân</label>
                        <select name="pID" id="patient-name">
                            @foreach (var item in Model.patients)
                            {
                                <option value="@item.Patient_ID">@item.Patient_Name</option>
                            }
                        </select>
                    </div><br>
                    <div class="surgery-form maindoctor">
                        <label for="maindoctor-name">Bác sĩ mổ chính</label>
                        <select name="surmain" id="maindoctor-name">
                            @foreach (var item in Model.staffs)
                            {
                                <option value="@item.Staff_ID">@item.Staff_Name</option>
                            }
                        </select>
                    </div><br>
                    <div class="surgery-form roomtype">
                        <label for="surgery-form-roomtype">Loại phòng</label>
                        <select name="roomtypes" id="surgery-form-roomtype">
                            <option value="0">Tuần Hoàn</option>
                            <option value="1">Hô Hấp</option>
                            <option value="2">Bài Tiết</option>
                            <option value="3">Thần Kinh</option>
                            <option value="4"> Nội Soi</option>
                        </select>
                    </div>
                    <div class="surgery-form roomcode">
                        <label for="surgery-form-roomcode">Mã phòng</label>
                        <select name="roomID" id="surgery-form-roomcode">
                            @foreach (var item in Model.rooms)
                            {
                                <option value="@item.Room_ID">@item.Room_ID</option>
                            }
                        </select>
                    </div> <br>
                    <div class="surgery-form dateandtime">
                        <label for="birthdaytime">Thời gian vào mổ</label>
                        <input type="datetime-local" id="birthdaytime" name="surtime">
                    </div>
                </div> <br>
                <div class="submit-reset-button">
                    <div class="submit-button">
                        <button type="submit" id="submit-button">
                            <i class="fa-solid fa-floppy-disk"></i>
                            LƯU
                        </button>
                    </div>
                    <div class="reset-button">
                    <button id="reset-button">
                        <i class="fa-solid fa-arrows-rotate"></i>
                        LÀM LẠI
                    </button>
                </div>
            </div>
            </form>
        

    </div>
</body>
</html>