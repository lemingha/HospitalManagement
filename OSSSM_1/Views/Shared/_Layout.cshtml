<!DOCTYPE html>
<html>
<!--phần đầu-->
<head>
    <title>Thêm bệnh án</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="trangchinh.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://kit.fontawesome.com/2f8895050a.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="Navigator">
        <div id="title">
            HỆ THỐNG QUẢN LÝ NGOẠI KHOA
        </div>
        <div class="list-group">
            <a class="list-group item1" asp-action="Overview">
                <i class="bi bi-bar-chart-line"></i>
                Tổng quan
            </a>
            <a class="list-group item2" asp-action="Calender">
                <i class="bi bi-calendar2-week"></i>
                Lịch phẫu thuật
            </a>
            <a class="list-group item3" asp-action="Patient">
                <i class="bi bi-folder2"></i>
                Bệnh án
            </a>
            <a class="list-group item4" asp-action="Staff">
                <i class="bi bi-people"></i>
                Nhân sự
            </a>
            <a class="list-group item5" asp-action="Room">
                <i class="bi bi-clock"></i>
                Tình trạng phòng
            </a>
        </div>
    </div>
    <div class="Main">
        <div class="welcome">
            <div class=" hello">
                Xin chào,
                <div class="hello-user">
                    Lê Minh Hà
                </div>
            </div>
            <div class="user-info">
                <div class="alarm">
                    <a class="Noti" href="#!">
                        <i class="fa-solid fa-gear"></i>
                    </a>
                    <a class="Setting" href="#!">
                        <i class="fa-solid fa-bell"></i>
                    </a>
                </div>
                <div class="personal">
                    <a class="personal" href="#!">
                        <i class="bi bi-person-circle"></i>
                    </a>
                </div>
                <div class="name">
                    <div class="doctor-name">
                        <a id="doctor-name" href="!#">
                            LÊ MINH HÀ
                        </a>
                    </div>
                    <div class="doctor-position">
                        Bác sĩ CK2
                    </div>
                </div>
            </div>
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
</body>